<%= form_for @photo, url: {action: "create"} do |f| %>
  <%= f.label :user_id, "User" %>
  <%= f.select :user_id, User.all.collect { |user| [user.name, user.id] }, include_blank: false %>
  <br><br>

  <%= f.label :name, "Title" %>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label :url, "URL" %>
  <%= f.text_field :url %>
  <br><br>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
  <br><br>

  <%= f.label :visibility, "Visibility" %>
  <%= f.select :visibility, Photo::visibilities.keys.to_a %>
  <br><br>

  <%= f.label :license, "License" %>
  <%= f.select :license, Photo::licenses.keys.to_a %>
  <br><br>

  <%= f.submit "Create photo" %>
<% end %>
