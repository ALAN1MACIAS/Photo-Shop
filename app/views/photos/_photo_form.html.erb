<%= form_for @photo do |f| %>
  <%= f.label :name, t('photos.form.title') %>
  <%= f.text_field :name, required: true %>
  <br><br>

  <%= f.label :url, t('photos.form.url') %>
  <%= f.text_field :url, required: true %>
  <br><br>

  <%= f.label :description, t('photos.form.description') %>
  <%= f.text_area :description %>
  <br><br>

  <%= f.label :visibility, t('photos.form.visibility') %>
  <%= f.select :visibility, Photo::visibilities.keys.to_a, required: true %>
  <br><br>

  <%= f.label :license, t('photos.form.license') %>
  <%= f.select :license, Photo::licenses.keys.to_a, required: true %>
  <br><br>

  <% if @photo.new_record? %>
    <%= f.submit t('photos.form.create') %>
  <% else %>
    <%= f.submit t('photos.form.update') %>
  <% end %>
<% end %>
