<% content_for :title do %>
  <% @photo.name %>
<% end %>

<h1> <%= @photo.name %> </h1>
<img src=<%= @photo.url %> alt=<%= @photo.name %> height='300'>

<h2>Desciption: </h2>
<p> <%= @photo.description %> </p>

<h2>Author: </h2>
<p> <%= @photo.user.email %> </p>

<% if @photo.user == current_user %>
  <%= link_to 'Edit', edit_photo_path %>
  <%= link_to 'Delete', photo_path, method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>