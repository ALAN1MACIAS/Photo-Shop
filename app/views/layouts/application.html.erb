<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield :title %>
      <% else %>
        Welcome to frikr
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section>
      <nav>
        <%= link_to 'Home', welcome_home_path %>
        <%= link_to 'List photos', photo_index_path %>
        <% if user_signed_in? %>
          <%= link_to 'New photo', photo_new_path %>
          <%= link_to 'Go to', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Enter', new_user_session_path  %>
        <% end %>
      </nav>
    </section>

    <hr>

    <section>
      <p class='notice'><%= notice %></p>
      <p class='alert'><%= alert %></p>
      <%= yield %>
    </section>

    <hr>

    <section>
      <small>Frikr Inc &copy; All rights reserved</small>
    </section>
  </body>
</html>
